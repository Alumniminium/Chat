{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Client",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Client/Client.csproj"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build Server",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Server/Server.csproj"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build AvaloniaMVVMClient",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/AvaloniaMVVMClient/AvaloniaMVVMClient.csproj"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}